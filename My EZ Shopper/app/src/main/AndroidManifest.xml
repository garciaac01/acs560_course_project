<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ipfw.myezshopper" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bag_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ipfw.myezshopper.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ipfw.myezshopper.RegisterActivity"
            android:label="Registration" >
        </activity>
        <activity
            android:name="com.ipfw.myezshopper.ProfileActivity"
            android:label="User Profile" >
        </activity>
        <activity
            android:name="com.ipfw.myezshopper.SearchActivity"
            android:label="Product Search" >
        </activity>
    </application>

</manifest>
