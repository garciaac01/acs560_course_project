<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ipfw.myezshopper.ProfileFragment"
             android:orientation="vertical"
            android:background="#303030">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fafafa"
        android:id="@+id/welcome_text"
        android:textColorHint="#fafafa"
        android:layout_margin="24dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_new_deal_fragment"
        android:id="@+id/go_to_new_deal_fragment"
        android:background="@drawable/btn_back"
        android:textColor="#ffffff"
        android:layout_marginBottom="12dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_new_list_fragment"
        android:id="@+id/go_to_new_list_fragment"
        android:background="@drawable/btn_back"
        android:textColor="#ffffff"
        android:layout_marginBottom="12dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_delete_fragment"
        android:id="@+id/go_to_delete_fragment"
        android:background="@drawable/btn_back"
        android:textColor="#ffffff"
        android:layout_marginBottom="12dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_chgpassword_fragment"
        android:id="@+id/go_to_chgpassword_fragment"
        android:background="@drawable/btn_back"
        android:textColor="#ffffff"
        android:layout_marginBottom="12dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_search_fragment"
        android:id="@+id/go_to_search_fragment"
        android:background="@drawable/btn_blue_back"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#ffffff"
        android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>
